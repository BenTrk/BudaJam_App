<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/route_spinner_background">

    <RelativeLayout
        android:id="@+id/routeDropDownRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp">

    <ImageView
        android:id="@+id/routeDiffImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/muscle"
        android:paddingEnd="5dp"
        android:layout_centerVertical="true"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:id="@+id/textContainerLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/routeDiffImageView"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/routeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/routeNameStyle"
            android:text="Test"/>
    </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height= "10dp"
        android:layout_below="@+id/routeDropDownRelativeLayout"
        android:background="@android:color/white" />

</RelativeLayout>